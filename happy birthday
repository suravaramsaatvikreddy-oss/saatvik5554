**script.js**
```javascript
function startBirthday() {
    const name = document.getElementById('name').value;
    if(name.trim() === '') {
        alert('Please enter a name!');
        return;
    }
    document.getElementById('name-input-section').style.display = 'none';
    document.getElementById('birthday-section').style.display = 'block';
    document.getElementById('greeting').innerText = `Happy Birthday, ${name}! ðŸŽ‰`;
}

function cutCake() {
    alert('ðŸŽ‚ Cake Cut! Letâ€™s play some games! ðŸŽ®');
    document.getElementById('birthday-section').style.display = 'none';
    document.getElementById('game-section').style.display = 'block';
}

function playGame(gameName) {
    alert(`Playing ${gameName}... Fun! ðŸ˜Ž`);
}

function finalGreeting() {
    const name = document.getElementById('name').value;
    document.getElementById('game-section').style.display = 'none';
    document.getElementById('final-section').style.display = 'block';
    document.getElementById('final-greeting').innerText = `Once again, Happy Birthday, ${name}! ðŸŽ‰ðŸŽˆ`;
}
```

